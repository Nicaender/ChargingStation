<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textViewDefectiveAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:gravity="center_vertical"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDefectiveAdress"
        android:text="@string/distance"
        android:gravity="center_vertical"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewDefectiveReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textViewDefectiveAdress"
        android:layout_toLeftOf="@id/buttonMarkToRepair"
        android:text="@string/reason"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonMarkToRepair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
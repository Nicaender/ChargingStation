<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapsFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageViewRadius"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        android:contentDescription="@string/no_description" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerRadiusValue"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/imageViewRadius"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:ms_dropdown_max_height="200dp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/imageButtonFavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:contentDescription="@string/notinfavorite" />

    <ImageButton
        android:id="@+id/imageButtonReport"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="25dp"
        android:layout_toRightOf="@id/imageButtonFavorite"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_report_24"
        android:contentDescription="@string/infavorite" />

    <ImageButton
        android:id="@+id/imageButtonSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_search_24"
        android:contentDescription="@string/no_description" />

</RelativeLayout>
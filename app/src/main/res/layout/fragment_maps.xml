<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragments.MapsFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageViewRadius"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        android:contentDescription="@string/no_description"
        app:tint="@color/icon_color" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerRadiusValue"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="30dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:ms_dropdown_max_height="200dp"
        app:ms_background_color="@color/item_background_color" />


    <ImageView
        android:id="@+id/imageViewFavRepBackground"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:src="@drawable/item_curved"
        android:contentDescription="@string/no_description" />

    <ImageButton
        android:id="@+id/imageButtonFavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="144dp"
        android:layout_marginBottom="30dp"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:contentDescription="@string/notinfavorite"
        app:tint="@color/icon_color" />

    <ImageButton
        android:id="@+id/imageButtonReport"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/imageButtonFavorite"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_report_24"
        android:contentDescription="@string/infavorite"
        app:tint="@color/icon_color" />

    <ImageButton
        android:id="@+id/imageButtonSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_search_24"
        android:contentDescription="@string/no_description"
        app:tint="@color/icon_color" />

    <ImageButton
        android:id="@+id/imageButtonMyLocation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_location_searching_24"
        android:contentDescription="@string/no_description"
        app:tint="@color/icon_color" />

</RelativeLayout>
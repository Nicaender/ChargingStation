<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragments.SettingsFragment">

    <Button
        android:id="@+id/buttonTechnicianSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/button_text_color"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/technician_site"/>

    <Button
        android:id="@+id/buttonDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/buttonTechnicianSite"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/button_background_color"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/button_text_color"/>

    <TextView
        android:id="@+id/textViewViewRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/buttonTechnicianSite"
        android:layout_alignParentStart="true"
        android:text="@string/view_radius"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_color"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/editTextViewRadiusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textViewViewRadius"
        android:layout_toLeftOf="@id/textViewKM"
        android:layout_below="@id/buttonTechnicianSite"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:textColor="@color/text_color"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textViewKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/buttonTechnicianSite"
        android:layout_marginLeft="10dp"
        android:text="@string/km"
        android:textColor="@color/text_color"
        android:textSize="35sp" />

</RelativeLayout>